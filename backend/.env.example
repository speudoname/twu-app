# Server Configuration
NODE_ENV=development
PORT=3001

# JWT - Generate secure key with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=generate_secure_random_key_do_not_use_default

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Database
DATABASE_PATH=./data/twu.db

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Initial Admin User (Optional - only for first-run setup)
# Set these in environment variables, not in this file
# ADMIN_EMAIL=
# ADMIN_PASSWORD=
# ADMIN_NAME=

# Encryption Key - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=generate_secure_random_key_do_not_use_default

# Email settings are stored in database (not env vars)